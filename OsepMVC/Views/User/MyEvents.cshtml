@model IEnumerable<OsepMVC.Models.Event>

@{
    ViewData["Title"] = "Etkinliklerim";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/user/myevents.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <i class="fas fa-calendar-alt fa-3x"></i>
                <h3 class="mb-0 d-inline"> Etkinliklerim</h3>
            </div>
            <div class="card-body">
                <h4 class="card-title text-center">Etkinliklerim Kısmı</h4>
                <hr />
                <p class="text-center">
                    <a class="btn btn-primary" asp-action="Create" asp-controller="Event">Yeni Etkinlik Oluştur</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Date)</th>
                                <th>Oylar</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                    <td>@item.Votes.Count</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Details" asp-controller="Event" asp-route-id="@item.EventId">Detaylar</a>
                                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Event" asp-route-id="@item.EventId">Düzenle</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Event" asp-route-id="@item.EventId">Sil</a>
                                        <a class="btn btn-secondary" asp-action="EventParticipations" asp-controller="Event" asp-route-eventId="@item.EventId">Katılımcıları Görüntüle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
