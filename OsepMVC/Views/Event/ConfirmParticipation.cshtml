@model OsepMVC.Models.Event

@{
    ViewData["Title"] = "Etkinliğe Katılma Onayı";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <i class="fas fa-exclamation-triangle fa-3x"></i>
            <h3 class="mb-0 d-inline"> Ücretli Etkinlik Onayı</h3>
        </div>
        <div class="card-body text-center">
            <h4 class="card-title">Katılmak istediğiniz etkinlik ücretli bir etkinliktir.</h4>
            <p class="card-text">Etkinlik: @Model.Title</p>
            <p class="card-text">Fiyat: @Model.Price.Value.ToString("C")</p>
            <p>Yine de devam etmek istiyor musunuz?</p>
            <form asp-action="ConfirmParticipation" method="post">
                <input type="hidden" name="eventId" value="@Model.EventId" />
                <input type="hidden" name="confirmed" value="true" />
                <button type="submit" class="btn btn-success">Evet, Katılmak İstiyorum</button>
            </form>
            <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary mt-3">Hayır, Geri Dön</a>
        </div>
    </div>
</div>
